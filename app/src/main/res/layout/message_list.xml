<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    app:cardCornerRadius="20dp"

    app:cardElevation="0dp"
    android:layout_margin="20dp"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"



            app:cardElevation="0dp"

            app:cardCornerRadius="20dp">

            <LinearLayout

                android:id="@+id/item_title_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/newgrey">

                <LinearLayout
                    android:gravity="center"


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/number"
                        android:layout_weight="0.5"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/source_sans_pro"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Message N°\t1"
                        />

                    <ImageView
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/email"
                        />



                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout

            android:id="@+id/item_layout"
            android:visibility="visible"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView


                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView

                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/grey4"
                        android:fontFamily="@font/source_sans_pro"

                        android:textSize="11sp"
                        android:layout_width="wrap_content"
                        android:text="Expéditeur"

                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginBottom="10dp"
                        android:id="@+id/message_list_sender"
                        android:layout_marginRight="20dp"

                        android:layout_marginLeft="10dp"

                        android:textColor="@color/black"
                        android:fontFamily="@font/source_sans_pro"

                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:text="ManagerAgent"
                        android:layout_height="wrap_content"/>







                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView


                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView

                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/grey4"
                        android:fontFamily="@font/source_sans_pro"

                        android:textSize="11sp"
                        android:layout_width="wrap_content"
                        android:text="Destinataire"

                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginBottom="10dp"
                        android:id="@+id/message_list_reciever"
                        android:layout_marginRight="20dp"

                        android:layout_marginLeft="10dp"

                        android:textColor="@color/black"
                        android:fontFamily="@font/source_sans_pro"

                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:text="ClassifAgent"
                        android:layout_height="wrap_content"/>







                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView


                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView

                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/grey4"
                        android:fontFamily="@font/source_sans_pro"

                        android:textSize="11sp"
                        android:layout_width="wrap_content"
                        android:text="Contenu"

                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginBottom="10dp"
                        android:id="@+id/message_list_content"
                        android:layout_marginRight="20dp"

                        android:layout_marginLeft="10dp"

                        android:textColor="@color/black"
                        android:fontFamily="@font/source_sans_pro"

                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:text="DoTrainig"
                        android:layout_height="wrap_content"/>







                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView


                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView

                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/grey4"
                        android:fontFamily="@font/source_sans_pro"

                        android:textSize="11sp"
                        android:layout_width="wrap_content"
                        android:text="Temps"

                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginBottom="10dp"
                        android:id="@+id/message_list_temps"
                        android:layout_marginRight="20dp"

                        android:layout_marginLeft="10dp"

                        android:textColor="@color/black"
                        android:fontFamily="@font/source_sans_pro"

                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:text="20:20:20"
                        android:layout_height="wrap_content"/>







                </LinearLayout>

            </androidx.cardview.widget.CardView>







        </LinearLayout>










    </LinearLayout>








</androidx.cardview.widget.CardView>