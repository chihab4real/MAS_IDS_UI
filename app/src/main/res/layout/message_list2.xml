<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    app:cardCornerRadius="0dp"

    app:cardElevation="0dp"

    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout



            android:id="@+id/item_layout"
            android:visibility="visible"

            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView


                android:layout_marginLeft="10dp"

                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"


                android:layout_width="wrap_content"
                android:layout_height="match_parent"



                app:cardElevation="0dp"

                app:cardCornerRadius="15dp">

                <LinearLayout


                    android:id="@+id/item_title_layout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/yellow2">

                    <LinearLayout
                        android:gravity="center"


                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_gravity="center"
                            android:id="@+id/message_list_number"
                            android:layout_weight="0.5"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/source_sans_pro"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N°\t1"
                            />




                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView


                android:layout_marginRight="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="horizontal"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView

                            android:id="@+id/message_list_sender"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="10dp"


                            android:textColor="@color/grey4"
                            android:fontFamily="@font/source_sans_pro"

                            android:textSize="11sp"
                            android:layout_width="wrap_content"
                            android:text="Manager Agent"

                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/sendfile2"
                            android:layout_width="17dp"
                            android:layout_height="17dp"/>

                        <TextView

                            android:layout_gravity="center"


                            android:id="@+id/message_list_reciever"
                            android:layout_marginRight="20dp"

                            android:layout_marginLeft="5dp"

                            android:textColor="@color/black"
                            android:fontFamily="@font/source_sans_pro"

                            android:textSize="11sp"
                            android:layout_width="wrap_content"
                            android:text="ClassifAgent"
                            android:layout_height="wrap_content"/>







                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/message_list_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Do Training"
                            android:fontFamily="@font/source_sans_pro"
                            android:textColor="@color/black"

                            android:textSize="13sp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="   •   "
                            android:fontFamily="@font/source_sans_pro"
                            android:textColor="@color/grey4"

                            android:textSize="12sp"

                            />

                        <TextView
                            android:id="@+id/message_list_temps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20:20:20"
                            android:fontFamily="@font/source_sans_pro"
                            android:textColor="@color/grey4"

                            android:textSize="10sp"

                            />





                    </LinearLayout>



                </LinearLayout>



            </androidx.cardview.widget.CardView>









        </LinearLayout>










    </LinearLayout>








</androidx.cardview.widget.CardView>