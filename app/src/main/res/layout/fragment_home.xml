                                            android:id="@+id/svmfmtxt"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="\t\tF-Measure: "
                                            android:textColor="@color/grey2" />




